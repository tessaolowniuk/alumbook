<!-- User Survey Form Render -->
<%= form_tag("/report/show", method:"post", onsubmit:"report_form_reset()") do %>

  <h3>Report by User Survey Results</h3>
  <p>Display survey results for a particular user.</p>

  <%= label_tag(:user_name, 'Enter User Login: ') %>
  <%= text_field_tag(:user_name) %>

  <%= label_tag(:survey_select, 'Select a survey: ') %>
  <%= select_tag(:survey_select, (options_from_collection_for_select(Survey.all, :id, :survey_name))) %>

  <!-- Form identifiers -->
  <%= hidden_field_tag(:report_id, 8) %>
  <%= hidden_field_tag(:report_name, "User Survey Results") %>

  <%= submit_tag('Submit', :class => 'button') %>
<% end %>
