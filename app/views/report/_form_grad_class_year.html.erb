<!-- Graduation Class Form Render -->
<%= form_tag("/report/show", method:"post", onsubmit:"report_form_reset()") do %>

  <h3>Report by Graduation Class Year</h3>
  <p>Make a list of users by their graduating class year.</p>

  <%= label_tag(:year_graduated, 'Graduation year:') %>
  <%= select_year(0, discard_type: true, prefix: 'year_graduated', start_year: Date.today.year, end_year: 1960) %>

  <%= label_tag(:saved_list_type, 'Run report on: ') %>
  <%= select_tag(:saved_list_type, (options_from_collection_for_select(SavedList.where("login_id = ?", current_login.id), :id, :list_name)), {:include_blank => 'All Users'}) %>

  <!-- Form identifiers -->
  <%= hidden_field_tag(:report_id, 2) %>
  <%= hidden_field_tag(:report_name, "Graduation Class Year") %>

  <%= submit_tag('Submit', :class => 'button') %>
<% end %>
