<!-- Date Entered Form Render -->
<%= form_tag("/report/show", method:"post", onsubmit:"report_form_reset()") do %>

  <h3>Report by Date Entered</h3>
  <p>Make a list of users by when they have entered the system.</p>

  <%= label_tag(:month_entered, 'Month entered:') %>
  <%= select_month(0, discard_type: true, prefix: 'month_entered', use_short_month: true, prompt: 'Any Month') %>

  <%= label_tag(:year_entered, 'Year entered:') %>
  <%= select_year(0, discard_type: true, prefix: 'year_entered', start_year: Date.today.year, end_year: 2014, prompt: 'Any Year') %>

  <%= label_tag(:saved_list_type, 'Run report on: ') %>
  <%= select_tag(:saved_list_type, (options_from_collection_for_select(SavedList.where("login_id = ?", current_login.id), :id, :list_name)), {:include_blank => 'All Users'}) %>

  <!-- Form identifiers -->
  <%= hidden_field_tag(:report_id, 1) %>
  <%= hidden_field_tag(:report_name, "Date Entered") %>

  <%= submit_tag('Submit', :class => 'button') %>
<% end %>
